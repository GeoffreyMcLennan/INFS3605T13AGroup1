        android:width="250dp"
        android:height="250dp"
        android:viewportWidth="272"
        android:viewportHeight="272">
      <group>
        <clip-path
            android:pathData="M272 136C272 211.111 211.111 272 136 272C60.8893 272 0 211.111 0 136C0 60.8893 60.8893 0 136 0C211.111 0 272 60.8893 272 136Z" />
